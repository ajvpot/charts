{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base",
      ":prHourlyLimitNone",
      ":prConcurrentLimitNone"
   ],
   "packageRules":[
      {
         "matchUpdateTypes":[
            "minor",
            "patch",
            "pin",
            "digest"
         ],
         "automerge":true
      }
   ],
  "git-submodules": {
    "enabled": true
  },
  "helm-values": {
    "enabled": true,
    "pinDigests": true,
    "bumpVersion": "patch"
  },
  "helmv3": {
    "enabled": true,
    "bumpVersion": "patch"
  }
}
